[flake8]
max-line-length = 88
max-complexity = 10
exclude = [
    ".git",
    "__pycache__",
    ".venv",
    "venv",
    "env",
    ".tox",
    ".eggs",
    "*.egg",
    "build",
    "dist",
    "migrations",
    "*/migrations/*",
    "node_modules",
    "site-packages",
    "*/site-packages/*"
]
ignore = [
    "E203", # whitespace before ':'
    "E501", # line too long (handled by black)
    "W503", # line break before binary operator
    "W504", # line break after binary operator
]
per-file-ignores = [
    "__init__.py:F401", # imported but unused
    "settings.py:E501", # long lines in settings are often unavoidable
]