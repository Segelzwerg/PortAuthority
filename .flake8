[flake8]
max-line-length = 88
max-complexity = 10
exclude =
    ".git",
    "__pycache__",
    ".venv",
    "venv",
    "env",
    ".tox",
    ".eggs",
    "*.egg",
    "build",
    "dist",
    "migrations",
    "*/migrations/*",
    "node_modules",
    "site-packages",
    "*/site-packages/*"

ignore =
    E203,
    E501,
    W503,
    W504,

per-file-ignores =
    __init__.py:F401,
    settings.py:E501,
